manifest:
  version: 1.0

automations:
  lol:
    on: 
      - merge
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: {{ branch.commits.messages | dump | safe }}
  code_experts:
    if: 
      - {{ pr.description | includes(list=['gaga']) }}
    run:
      - action: add-comment@v1
        args:
          comment: {{ pr.description | helloGaga }}

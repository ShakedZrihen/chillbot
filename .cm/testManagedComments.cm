automations:
  comment_n_of_files:
    if:
      - true
    run: 
      - action: add-comment@v1
        args:
          comment: |
            number of files: {{ files | length }}
            
  the_right_reviewer:
    if: 
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{ repo | explainRankByGitBlame(lt=100) }}


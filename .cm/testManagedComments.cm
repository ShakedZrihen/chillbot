automations:
  comment_n_of_files:
    if:
      - true
    run: 
      - action: add-comment@v1
        args:
          comment: |
            number of files: {{ files | length }}
            
  test_labels:
    if:
      - {{ files | length < 2 }}
    run: 
      - action: add-label@v1
        args:
          label: "small"
      

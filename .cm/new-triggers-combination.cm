# -*- mode: yaml -*-

manifest:
  version: 1.0

triggers:
  include:
    repository:
      - r/.*bot$/
  exclude:
    branch:
      - r/.*patch.*/

automations:
  checklist: 
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: "this repository was included but patch branch should be excluded"


# -*- mode: yaml -*-
manifest:
  version: 1.0

checks:
  size:
    is:
      xsmall: {{ branch.diff.size <= 5 }}
      small: {{ branch.diff.size <= 20 }}
      medium: {{ branch.diff.size <= 100 }}
      large: {{ branch.diff.size <= 200 }}
      xlarge: {{ branch.diff.size > 200 }}

automations:
  mark_good_pr:
    if:
      - {{ checks.size.is.small }}
    run:
      - action: add-labels@v1
        args:
          labels: [good_size]
